Config
	{
                font = "xft:Ubuntu:style=Bold:size=14",
		bgColor = "#000000",
		fgColor = "#2c72c7",
		border = NoBorder,
		borderColor = "#000000"
		position = TopSize C 100 32
		lowerOnStart = True,
		commands =
			[
				Run Date "%y%m%0d %H:%M  " "date" 10,
				Run BatteryP ["BAT0"]
                                    ["-t", "<fc=#aaaaaa><left>%</fc><acstatus> ", "--", "-O", "*", "-o", ""]
                                    600,
                                Run StdinReader
			],
		sepChar = "%",
		alignSep = "}{",
		template = " %StdinReader% }{ %battery% <fc=#868686>%date%</fc>"
	}
