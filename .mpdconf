# totte's MPD configuration
music_directory		"~/music"
playlist_directory	"~/.mpd/playlists"
db_file			"~/.mpd/database"
log_file		"~/.mpd/log"
pid_file		"~/.mpd/pid"
state_file		"~/.mpd/state"
auto_update	        "yes"
input {
        plugin          "curl"
}
audio_output {
	type		"alsa"
	name		"My ALSA Device"
	mixer_type      "hardware"
	mixer_control	"Master"
}
filesystem_charset	"UTF-8"
